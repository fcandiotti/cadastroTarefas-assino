@model List<TarefaModel>
@{
    ViewData["Title"] = "Listagem de Tarefas";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary role="button" asp-controller="Tarefa" asp-action="Criar">Adicionar nova Tarefa</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemError"]
        </div>
    }

    <br />

    <h1 class="display-4">Lista de Tarefas</h1>

    <table class="table table-striped table-hover" id="table-tarefas">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tarefa</th>
                <th scope="col">Descrição</th>
                <th scope="col">Data Finalização</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (TarefaModel tarefa in Model)
                {
                    <tr>
                        <th scope="row">@tarefa.id</th>
                        <td>@tarefa.titulo</td>
                        <td>@tarefa.descricao</td>
                        <td>@tarefa.dataFinalizacao</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@tarefa.id" asp-controller="Tarefa" asp-action="Editar"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Editar</font></font></a>
                                <a role="button" class="btn btn-danger" asp-route-id="@tarefa.id" asp-controller="Tarefa" asp-action="DeletarConfirmacao"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Deletar</font></font></a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>