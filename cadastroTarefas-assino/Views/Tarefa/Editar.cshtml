@model TarefaModel
@{
    ViewData["Title"] = "Editar Tarefa";
}

<div class="text-center">

    <h1 class="display-4">Editar Tarefa</h1>

</div>

<form asp-controller="Tarefa" asp-action="Atualizar" method="post">
    <input type="hidden" asp-for="id"/>

    <div class="form-group">
        <label for="titulo">Título</label>
        <input type="text" asp-for="titulo" class="form-control">
    </div>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <textarea asp-for="descricao" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label for="dataFinalizacao">Data de Finalização</label>
        <input type="date" asp-for="dataFinalizacao" class="form-control">
    </div>
    <br />
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a class="btn btn-secondary w-100" asp-controller="Tarefa" asp-action="Index" role="button">Voltar</a>
    </div>
</form>